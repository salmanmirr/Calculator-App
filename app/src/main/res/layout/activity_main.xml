<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">



    <TextView
        android:id="@+id/displayID"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textSize="60dp"
        android:padding="20dp"
        android:layout_above="@+id/tableLayoutID"/>


    <TableLayout
        android:id="@+id/tableLayoutID"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:stretchColumns="*"
        android:padding="2dp">




        <TableRow>

            <Button
                android:id="@+id/acID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="AC"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="18dp"
                android:backgroundTint="@color/coral"
                />

            <Button
                android:id="@+id/deleteID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="C"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="18dp"
                android:backgroundTint="@color/coral"/>

            <Button
                android:id="@+id/percentageID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="%"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/lightGray"/>

            <Button
                android:id="@+id/divideID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="/"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/oneID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="7"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/twoID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="8"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/threeID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="9"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/multiplyID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="*"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

        </TableRow>

        <TableRow>


            <Button
                android:id="@+id/fourID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="4"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/fiveID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="5"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/sixID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="6"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/subtractID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="-"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

        </TableRow>


        <TableRow>

            <Button
                android:id="@+id/sevenID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="1"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/eightID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="2"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/nineID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="3"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"
                />

            <Button
                android:id="@+id/addID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="+"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/zeroID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="0"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <!--
            <Button
                android:id="@+id/cosID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="cos"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

            <Button
                android:id="@+id/sinID"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="sin"
                android:padding="8dp"
                android:layout_weight=".7"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/teal"/>

           -->

            <Button
                android:id="@+id/equalID"
                android:layout_height="80dp"
                android:layout_width="0dp"
                android:layout_weight="2.13"
                android:text="="
                android:padding="8dp"
                android:layout_margin="2dp"
                android:textSize="25dp"
                android:backgroundTint="@color/coral"/>



        </TableRow>


    </TableLayout>


</RelativeLayout>