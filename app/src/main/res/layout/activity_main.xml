<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:padding="10dp"
        android:textSize="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/displayID"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textSize="60dp"
        android:padding="20dp"
        android:layout_below="@+id/textViewID"/>


    <TableLayout
        android:id="@+id/tableLayoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stretchColumns="*"
        android:padding="19dp">

        <TableRow>

            <Button
                android:id="@+id/acID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textStyle="italic"
                android:padding="8dp"/>

            <Button
                android:id="@+id/deleteID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/percentageID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%" />

            <Button
                android:id="@+id/divideID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/oneID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:padding="8dp"/>

            <Button
                android:id="@+id/twoID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" />

            <Button
                android:id="@+id/threeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9" />

            <Button
                android:id="@+id/multiplyID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x" />

        </TableRow>

        <TableRow>


            <Button
                android:id="@+id/fourID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:id="@+id/fiveID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <Button
                android:id="@+id/sixID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />

            <Button
                android:id="@+id/subtractID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

        </TableRow>


        <TableRow>

            <Button
                android:id="@+id/sevenID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:id="@+id/eightID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <Button
                android:id="@+id/nineID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <Button
                android:id="@+id/addID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/zeroID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/equalID"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="="/>

        </TableRow>


    </TableLayout>


</RelativeLayout>